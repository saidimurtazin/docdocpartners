    [Markup.button.callback('üìà –ö–∞–∫ —Å—Ç–∞—Ç—å —Å–∞–º–æ–∑–∞–Ω—è—Ç—ã–º', 'kb_selfemployed')],
    [Markup.button.callback('üè• –ö–ª–∏–Ω–∏–∫–∏-–ø–∞—Ä—Ç–Ω–µ—Ä—ã', 'kb_clinics')]
