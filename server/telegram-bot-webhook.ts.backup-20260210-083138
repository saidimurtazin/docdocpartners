    [Markup.button.callback('üîí –ü—Ä–æ–≤–µ—Ä–∫–∏ –±–µ–∑–æ–ø–∞—Å–Ω–æ—Å—Ç–∏', 'kb_security')],
    [Markup.button.callback('üìÖ –ë–µ—Å–ø–ª–∞—Ç–Ω–∞—è –∑–∞–ø–∏—Å—å', 'kb_booking')],
