  await ctx.answerCbQuery();
  
  const answer = answers[ctx.match[0]] || '–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –Ω–µ –Ω–∞–π–¥–µ–Ω–∞.';

  await ctx.reply(answer, { parse_mode: 'HTML' });
